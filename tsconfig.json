{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ESNext"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@config/*": ["./src/config/*"],
      "@core/*": ["./src/core/*"],
      "@shared/*": ["./src/shared/*"],
      "@modules/*": ["./src/modules/*"],
      "@identity": ["./src/modules/identity/index.ts"],
      "@clients": ["./src/modules/clients/index.ts"],
      "@events": ["./src/modules/events/index.ts"],
      "@forms": ["./src/modules/forms/index.ts"],
      "@pricing": ["./src/modules/pricing/index.ts"],
      "@access": ["./src/modules/access/index.ts"],
      "@registrations": ["./src/modules/registrations/index.ts"],
      "@reports": ["./src/modules/reports/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
